<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.mainFragments.profile.NotFriendProfileActivity">

    <TextView
            android:id="@+id/notfriend_tvUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/not_friend_profile"
            android:textSize="20sp"
            android:fontFamily="@font/catamaran_black"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notfriend_ivProfileImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notfriend_tvUserName"
            android:layout_marginStart="15dp"/>

    <TextView
            android:id="@+id/notfriend_tvNumWishlists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_friend_profile_variable"
            android:textSize="17sp"
            android:fontFamily="@font/catamaran_black"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="0dp"
            app:layout_constraintStart_toStartOf="@+id/notfriend_tvWishlists"
            app:layout_constraintEnd_toEndOf="@+id/notfriend_tvWishlists"
            app:layout_constraintBottom_toTopOf="@+id/notfriend_tvWishlists"/>

    <TextView
            android:id="@+id/notfriend_tvWishlists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wishlists"
            android:textSize="15sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/catamaran"
            app:layout_constraintStart_toEndOf="@+id/notfriend_ivProfileImage"
            app:layout_constraintBottom_toBottomOf="@+id/notfriend_ivProfileImage"
            android:layout_marginStart="45dp"
            android:layout_marginBottom="15dp"/>

    <TextView
            android:id="@+id/notfriend_tvNumReserves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_friend_profile_variable"
            android:textSize="17sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/catamaran_black"
            app:layout_constraintStart_toStartOf="@+id/notfriend_tvReserves"
            app:layout_constraintTop_toTopOf="@+id/notfriend_tvNumWishlists"
            app:layout_constraintEnd_toEndOf="@+id/notfriend_tvReserves"/>

    <TextView
            android:id="@+id/notfriend_tvReserves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bookings"
            android:textSize="15sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/catamaran"
            app:layout_constraintStart_toEndOf="@+id/notfriend_tvWishlists"
            app:layout_constraintEnd_toStartOf="@+id/notfriend_tvFriends"
            app:layout_constraintBottom_toBottomOf="@+id/notfriend_tvWishlists"/>

    <TextView
            android:id="@+id/notfriend_tvNumFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_friend_profile_variable"
            android:textSize="17sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/catamaran_black"
            app:layout_constraintStart_toStartOf="@+id/notfriend_tvFriends"
            app:layout_constraintTop_toTopOf="@+id/notfriend_tvNumWishlists"
            app:layout_constraintEnd_toEndOf="@+id/notfriend_tvFriends"/>

    <TextView
            android:id="@+id/notfriend_tvFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friends"
            android:textSize="15sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/catamaran"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/notfriend_tvWishlists"
            android:layout_marginEnd="15dp"/>

    <View
            android:id="@+id/friendProfile_view"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/light_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/notfriend_ivProfileImage"/>

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/cross"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/friendProfile_view"
            android:layout_marginBottom="200dp"/>
    <TextView
            android:id="@+id/notfriend_tvNotFriendWith"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/not_friends"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/catamaran_black"
            android:textColor="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/notfriend_bSendRequest"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@string/request_friendship"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:background="@drawable/round_pink_button"
            android:textColor="@color/pastel"
            android:stateListAnimator="@null"
            android:fontFamily="@font/catamaran_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>