<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.mainFragments.profile.FriendProfileActivity">

    <TextView
            android:id="@+id/friendProfile_tvUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/friend_profile_username"
            android:textSize="20sp"
            android:fontFamily="@font/catamaran_black"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/friendProfile_ivProfileImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/friendProfile_tvUserName"
            android:layout_marginStart="15dp"/>

    <TextView
            android:id="@+id/friendProfile_tvNumWishlists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friend_profile_variable"
            android:textSize="17sp"
            android:fontFamily="@font/catamaran_black"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="0dp"
            app:layout_constraintStart_toStartOf="@+id/friendProfile_tvWishlists"
            app:layout_constraintEnd_toEndOf="@+id/friendProfile_tvWishlists"
            app:layout_constraintBottom_toTopOf="@+id/friendProfile_tvWishlists"/>

    <TextView
            android:id="@+id/friendProfile_tvWishlists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wishlists"
            android:textSize="15sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/catamaran"
            app:layout_constraintStart_toEndOf="@+id/friendProfile_ivProfileImage"
            app:layout_constraintBottom_toBottomOf="@+id/friendProfile_ivProfileImage"
            android:layout_marginStart="45dp"
            android:layout_marginBottom="15dp"/>

    <TextView
            android:id="@+id/friendProfile_tvNumReserves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friend_profile_variable"
            android:textSize="17sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/catamaran_black"
            app:layout_constraintStart_toStartOf="@+id/friendProfile_tvReserves"
            app:layout_constraintTop_toTopOf="@+id/friendProfile_tvNumWishlists"
            app:layout_constraintEnd_toEndOf="@+id/friendProfile_tvReserves"/>

    <TextView
            android:id="@+id/friendProfile_tvReserves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bookings"
            android:textSize="15sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/catamaran"
            app:layout_constraintStart_toEndOf="@+id/friendProfile_tvWishlists"
            app:layout_constraintEnd_toStartOf="@+id/friendProfile_tvFriends"
            app:layout_constraintBottom_toBottomOf="@+id/friendProfile_tvWishlists"/>

    <TextView
            android:id="@+id/friendProfile_tvNumFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friend_profile_variable"
            android:textSize="17sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/catamaran_black"
            app:layout_constraintStart_toStartOf="@+id/friendProfile_tvFriends"
            app:layout_constraintTop_toTopOf="@+id/friendProfile_tvNumWishlists"
            app:layout_constraintEnd_toEndOf="@+id/friendProfile_tvFriends"/>

    <TextView
            android:id="@+id/friendProfile_tvFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friends"
            android:textSize="15sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/catamaran"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/friendProfile_tvWishlists"
            android:layout_marginEnd="15dp"/>

    <Button
            android:id="@+id/friendProfile_bFriends"
            android:layout_width="59dp"
            android:layout_height="63dp"
            android:layout_marginBottom="12dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/friendProfile_tvFriends"
            app:layout_constraintStart_toStartOf="@+id/friendProfile_tvFriends"
            app:layout_constraintEnd_toEndOf="@+id/friendProfile_tvFriends"
            app:layout_constraintTop_toTopOf="@+id/friendProfile_tvNumFriends"
            app:layout_constraintHorizontal_bias="0.642" app:layout_constraintVertical_bias="0.2"/>
    <View
            android:id="@+id/friendProfile_view"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/light_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/friendProfile_ivProfileImage"/>

    <TextView
            android:id="@+id/friendProfile_tvWishlistTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wishlists"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/catamaran_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/friendProfile_view"
            android:layout_marginStart="15dp"/>

    <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/light_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/friendProfile_rvWishlists"/>

    <TextView
            android:id="@+id/friendProfile_tvSentGifts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bookings"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/catamaran_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/friendProfile_rvWishlists"
            android:layout_marginStart="15dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/friendProfile_rvWishlists"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/friendProfile_view"
            app:layout_constraintBottom_toTopOf="@+id/friendProfile_rvSentGifts"/>
    
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/friendProfile_rvSentGifts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/friendProfile_rvWishlists"
            app:layout_constraintBottom_toTopOf="@+id/friendProfile_bSendMessage"/>

    <ImageView
            android:background="@drawable/smoothscroll"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="@+id/friendProfile_rvWishlists"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:background="@drawable/smoothscroll"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="@+id/friendProfile_rvSentGifts"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/friendProfile_bSendMessage"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@string/send_message"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:background="@drawable/round_pink_button"
            android:textColor="@color/pastel"
            android:stateListAnimator="@null"
            android:fontFamily="@font/catamaran_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>