<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "70dp">

    <TextView
            android:id="@+id/wishlist_friend_tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="left"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/wishlist_friend_title"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:fontFamily="@font/catamaran_bold"
            app:layout_constraintStart_toEndOf="@+id/wishlist_friend_ivPicture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/wishlist_friend_vColor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/squircle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="15dp"/>
    <ImageView
        android:id="@+id/wishlist_friend_ivPicture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/giftr_shadow"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/wishlist_friend_tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="-3dp"
            android:fontFamily="arial"
            android:gravity="left"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/wishlist_friend_description"
            android:textColor="@color/dark_gray"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/wishlist_friend_ivPicture"
            app:layout_constraintTop_toBottomOf="@+id/wishlist_friend_tvTitle"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/wishlist_friend_vDivider"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="80dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>