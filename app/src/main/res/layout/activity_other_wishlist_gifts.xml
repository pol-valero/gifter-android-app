<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.OtherWishlistGiftsActivity">

    <TextView
            android:id="@+id/otherWishlistgifts_tvWishlistName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/other_wishlist_gifts_tv1"
            android:textSize="20sp"
            android:fontFamily="@font/catamaran_black"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@+id/otherWishlistgifts_tvWishlistEndDate"/>

    <TextView
            android:id="@+id/otherWishlistgifts_tvWishlistEndDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/other_wishlist_gifts_tv3"
            android:textSize="15sp"
            android:fontFamily="@font/catamaran_black"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/otherWishlistgifts_tvWishlistName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/otherWishlistgifts_tvWishlistName"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/otherWishlistgifts_rvGifts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/otherWishlistgifts_tvWishlistName"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/light_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>

    <ImageView
            android:background="@drawable/smoothscroll"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="34dp"
            app:layout_constraintHorizontal_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>